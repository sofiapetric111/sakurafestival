    </div>
    <img src="/public/images/map2.webp" alt="" />
  </div>
</MainLayout>

<style>
  * {
    margin: 0;
    padding: 0;
  }

  .sakura_img {
    position: absolute;
    margin-left: 34%;
    z-index: -1;
    margin-top: -8%;
    width: 20%;
  }

  .sakura-tekst h1 {
    z-index: 2;
  }

  h1 {
    text-align: center;
    font-size: 70px;
  }

  .boks1 {
    padding: 2cm;
    color: white;
  }

  .boks2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    background-color: #fbe4cf;
    padding: 2rem;
    gap: 2rem;
    line-height: 2rem;
  }

  .boks2 h2 {
    font-size: 30px;
    color: #263d3d;
  }

  .boks2 p {
    margin-top: 5%;
    color: #263d3d;
  }

  .boks2 img {
    width: 100%;
  }
  h1 {
    text-align: center;
  }
  .boks3 {
    background-color: #d5c0ac;
    color: #263d3d;
    padding: 2rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
  .boks3 img {
    width: 100%;
  }
  .cherry {
    padding-right: 4rem;
  }

  .boks3 h2 {
    font-size: 50px;
  }

  .boks3 p {
    line-height: 2rem;
  }

  @media only screen and (max-width: 600px) {
    .boks2 {
      display: grid;
      grid-template-columns: 1fr;
    }

    h1 {
      font-size: 42px;
      position: absolute;
      text-align: center;
      margin-top: -6%;
    }
    .sakura_img {
      position: absolute;
      margin-left: 0%;
      z-index: 0;
      margin-top: -15%;
      width: 30%;
    }

    .boks1 {
      padding: 2cm;
      color: white;
      display: flex;
      justify-content: center;
    }
    .boks3 {
      grid-template-columns: 1fr;
    }
    .cherry {
      margin-bottom: -8%;
      margin-top: -3%;
    }
    .bro {
      margin-top: -3%;
      grid-row: 4/4;
    }
  }
</style>
